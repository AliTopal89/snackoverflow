<%= form_for @question do |q| %>
  <% if @question.errors.any? %>
    <ul class='errors'>
      <% @question.errors.full_messages.each do |e| %>
        <li class='error'><%= e %></li>
      <% end %>
    </ul>
  <% end %>
  <%= q.label :title %>
  <%= q.text_field :title %>
  <br>
  <%= q.label :body %>
  <%= q.text_area :body %>

  <%= q.submit %>
<% end %>